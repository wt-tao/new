page{
  background-color: #E0E0E0;
}
.top{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
}
.top_coun{
  width: 130rpx;
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  /* border: 1rpx solid black; */
  border-radius: 40rpx;
}
.on{
  background-color: #FE4502;
  color: white;
}
.head{
  /* margin-top: 80rpx; */
     position: relative;
     /* border: 1rpx solid black; */
}

.slide-image{
  width: 100%;
     
}
.swiper-item{
height:322rpx;
display: block;
}
.menu-swiper-item{
height:360rpx ;     
}
.company_news{
  width: 100%;
  background-color: white;
}
.details_company{
  width: 95%;
  padding-top: 20rpx;
  margin-left: 2.5%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #DEDEDE;
}
.details_company_img{
  width: 130rpx;
  height: 130rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  /* border: 1rpx solid black; */
}
.details_company_count{
  height: 130rpx;
  width: 70%;
  margin-left: 10rpx;
  margin-top: 10rpx;
  /* border: 1rpx solid black; */
}
.details_company_count_name{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #4D4D4D;
  flex-wrap: wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.details_company_count_details{
  font-size: 26rpx;
  color: #656565;
}
.details_company_follow{
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: #FE4503;
  font-size: 26rpx;
  border: 1rpx solid #FE4503;
  border-radius: 20rpx;
  margin-top: 20rpx;
  /* margin-left: 100rpx; */
}
.news_details{
  width: 95%;
  margin-left: 2.5%;
  /* border: 1rpx solid black; */
}
.news_details_text{
  font-size: 28rpx;
  margin-top: 20rpx;
  height: 110rpx;
  color: #474747;
   text-overflow: -o-ellipsis-lastline;  
  overflow: hidden;  
  text-overflow: ellipsis;  
  display: -webkit-box;  
  -webkit-line-clamp: 3;  
  -webkit-box-orient: vertical;
}
.news_details_scroll{
  width: 100%;
  height: 150rpx;
  /* border: 1rpx solid black; */
  margin-top: 20rpx;
}
.news_details_scroll_list{
  height: 150rpx;
  width: 150rpx;
  margin-left: 40rpx;
  /* border: 1rpx solid black; */
   display: inline-block; 
}
.news_details_tiem{
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  display: flex;
  color: #676767;
  flex-direction: row;
  /* border: 1rpx solid black; */
}
.news_details_tiem_see{
  height: 80rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  line-height: 80rpx;
  width: 40%;
}
.news_details_tiem_time{
  width: 57%;
  font-size: 26rpx;
  text-align: right;
  line-height: 80rpx;
  /* border: 1rpx solid black; */
}