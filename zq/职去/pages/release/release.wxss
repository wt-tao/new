/* pages/release/release.wxss */
.page{
  height: 1000rpx;
  /* overflow-y: scroll; */
  /* border: 1rpx solid black; */
}
.dingkuiang{
  width: 100%;
  height: 100rpx;
  /* border: 1rpx solid black;  */
}
.top{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #EBEBEB;
}
.top_coun{
  width: 50%;
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #E5E5E5;
  border-right: 1rpx solid #E5E5E5;
}
.on{
  border-top: 10rpx solid #FEA702;
  background-color: white
}
.active-tag{
  background-color: #FE4502;
  color: #FEFFFF;
}
.dibu{
  width: 100%;
  height: 100rpx;
  /* border: 1rpx solid black; */
  background-color: white;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
}
.icon_img{
  width: 20%;
  height: 100%;
  /* border: 1rpx solid black; */
}
.icon_text{
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #3B3B3B;
}
.release_details{
  width: 100%;
  height: 640rpx;
  margin-top: 20rpx;
  border-bottom: 15rpx solid #D3D3D3;
}
.release_details_list{
  width: 95%;
  margin-left: 2.5%;
  height: 80rpx;
  line-height: 80rpx;
  /* border: 1rpx solid black; */
  display: flex;
  flex-direction: row;
}
.release_details_list_name{
  width: 22%;
  font-size: 28rpx;
  color: #292929;
  /* border: 1rpx solid black; */
}
.release_details_list_input{
  border-bottom: 1rpx solid #F2F2F2;
  width: 75%;
  height: 80rpx;
  font-size: 28rpx;
  
}
.picker{
  /* border: 1rpx solid black; */
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
}
.pickers{
  width: 88%;
  margin-left: 2%;
  /* border: 1rpx solid black; */
}
.job_count{
  width: 100%;
  height: 400rpx;
  border-bottom: 15rpx solid #D3D3D3;
}
.job_count_tit{
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
}
.textarea{
  width: 91%;
  height: 200rpx;
  margin-left: 20rpx;
  border: 1rpx solid #E6E6E6;
  padding-top: 10rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
}
.job_count_fl{
  width: 95%;
  margin-left: 2.5%;
  /* border: 1rpx solid black; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.job_count_fl_list{
  min-width: 130rpx;
  color: #CECECE;
  font-size: 26rpx;
  text-align: center;
  height: 50rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border-radius: 5rpx;
  line-height: 50rpx;
  border: 1rpx solid #CECECE;
}
.button{
  width: 95%;
  margin-left: 2.5%;
  height: 100rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  /* border: 1rpx solid black; */
  
}
.button_list{
  width: 45%;
  height: 80rpx;
  margin-top: 10rpx;
  line-height: 80rpx;
  text-align: center;
  color: #363636;
  font-size: 30rpx;
  margin-left: 3.5%;
  background-color: #DADADA;
}
.button_lists{
  width: 48.5%;
  height: 80rpx;
  margin-top: 10rpx;
  line-height: 80rpx;
  text-align: center;
  color: #363636;
  font-size: 30rpx;
  background-color: #DADADA;
}
.dynamic_tit{
  width: 95%;
  margin-left: 2.5%;
  /* border: 1rpx solid black; */
}
.dynamic_tit_name{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #292929;
}
.dynamic_tit_input{
  height: 70rpx;
  width: 95%;
  line-height: 70rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  padding-left: 4.5%;
  border: 1rpx solid #E6E6E6;
}
.dynamic_tit_itextarea{
  width: 95%;
  padding-left: 4.5%;
  padding-top: 20rpx;
  margin-top: 20rpx;
  height: 250rpx;
  font-size: 30rpx;
  border: 1rpx solid #E6E6E6;
}
.img{
  width: 95%;
  margin-left: 2.5%;
  height: 200rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  /* border: 1rpx solid black; */
}
.img_tit{
  width: 25%;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 32rpx;
  color:  #292929;
}
.img_upload{
  width: 75%;
  height: 150rpx;
  margin-top: 25rpx;
  display: flex;flex-direction: row;
  /* border: 1rpx solid black; */
}
.img_upload_button{
  width: 27%;
  height: 150rpx;
  border-radius: 10rpx;
  margin-left: 4%;
  color: #C3C3C3;
  border: 4rpx solid #C3C3C3;
}
.add{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 90rpx;
}
.upload_img{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
}
.div{
  width: 100%;height:100%;
}