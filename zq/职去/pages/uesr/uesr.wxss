.imgs{
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
}
.user{
  width: 100%;
  height: 400rpx;
  /* border: 1rpx solid black; */
  position: absolute;
  top: 0;
}
.user_img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  /* border: 1rpx solid black; */
  margin-left: 38%;
  margin-top: 20rpx;
}
.user_name{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #FFEEEC;
  margin-top: 10rpx;
}
.user_time{
  width: 60%;
  margin-left: 20%;
  height: 60rpx;
  color: #FEE9DA;
  text-align: center;
  line-height: 60rpx;
  background-color: #FF8508;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
}
.apply{
  width: 100%;
  margin-top: -30rpx;
}
.apply_my{
  width: 95%;
  margin-left: 2.5%;
  border-bottom: 1rpx solid #DFDFDF;
  font-size: 34rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #1B1B1B;
}
.apply_list{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 13rpx solid #E8E8E8;
}
.apply_list_img{
  width: 33%;
  height: 200rpx;
   /* border: 1rpx solid black; */
}
.apply_list_img_number{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  color: white;
  font-size: 28rpx;
  background-color: #FE0000;
  text-align: center;
  line-height: 50rpx;
  position: relative;
  top: -95rpx;
  left:140rpx;
}
.apply_list_img_text{
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #494949;
  margin-top: -40rpx;
}
.uesr_list{
  width: 100%;
}
.uesr_list_index{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  color: #1A1A1A;
  font-size: 30rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #E6E6E6;
}
.uesr_list_index_left{
  width: 70%;
  margin-left: 20rpx;
}
.tx{
  width: 20%;
  font-size: 26rpx;
  margin-left: 4%;
  color: white;
  background-color: #FE4502;
  height: 70rpx;
  margin-top: 15rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 15rpx;
}