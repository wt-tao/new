<view class='uesr_com' style='margin-top:20rpx;'>
  <view class='uesr_com_name'>头像</view>
  <view class='uesr_com_name_img'>
      <view class='uesr_com_name_tx' bindtap='img'>
          <image src='{{user.HeadUrl}}'style='width:100%;height:100%' class='imgs'/>
      </view>
  </view>
  <image src='../../img/yjt@3x.png' style='width:20rpx;margin-top:35rpx;margin-left:30rpx;' mode='widthFix'></image>
</view>

<view class='uesr_com' bindtap='uesr_name'>
  <view class='uesr_com_name'>昵称</view>
  <view class='uesr_com_name_img'>
      <view class='uesr_com_name_txs'>{{user.Name==null?'暂无':user.Name}}</view>
  </view>
  <image src='../../img/yjt@3x.png' style='width:20rpx;margin-top:35rpx;margin-left:30rpx;' mode='widthFix'></image>
</view>

<view class='uesr_com' bindtap='phone'>
  <view class='uesr_com_name'>绑定手机号</view>
  <view class='uesr_com_name_img'>
      <view class='uesr_com_name_txs' style='color:#282828'>{{user.Phone}}</view>
  </view>
  <image src='../../img/yjt@3x.png' style='width:20rpx;margin-top:35rpx;margin-left:30rpx;' mode='widthFix'></image>
</view>

<view class='uesr_com'>
  <view class='uesr_com_name'>注册时间</view>
  <view class='uesr_com_name_img'>
      <view class='uesr_com_name_txs'>{{user.Time}}</view>
  </view>
  <!-- <image src='../../img/yjt@3x.png' style='width:50rpx;height:50rpx;margin-top:25rpx; margin-left:30rpx;'></image> -->
</view>